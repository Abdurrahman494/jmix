<window xmlns="http://jmix.io/schema/ui/window">
    <layout>
        <table id="table"
               metaClass="pc_Country">
            <buttonsPanel id="buttonsPanel">
                <textField id="textField"/>
            </buttonsPanel>
        </table>
        <workArea id="workArea">
            <initialLayout id="initialLayout">
                <vbox id="initialLayoutVbox">
                    <label id="initialLayoutLabel"/>
                    <dataGrid id="initialLayoutDataGrid"
                              metaClass="pc_Country">
                        <buttonsPanel id="initialLayoutButtonsPanel"/>
                    </dataGrid>
                </vbox>
            </initialLayout>
        </workArea>
    </layout>
</window>