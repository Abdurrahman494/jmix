<window xmlns="http://jmix.io/schema/ui/window">
    <data>
        <collection id="customersDc" class="test_support.entity.sales.Customer">
            <loader id="customersLd" maxResults="2">
                <query><![CDATA[select e from test_Customer e]]></query>
            </loader>
        </collection>
        <collection id="customersDc1" class="test_support.entity.sales.Customer">
            <loader id="customersLdIPP" maxResults="2">
                <query><![CDATA[select e from test_Customer e]]></query>
            </loader>
        </collection>
        <collection id="customersDc2" class="test_support.entity.sales.Customer">
            <loader id="customersLdNoIPP" maxResults="2">
                <query><![CDATA[select e from test_Customer e]]></query>
            </loader>
        </collection>
        <collection id="customersDc3" class="test_support.entity.sales.Customer">
            <loader id="customersLdPostponed" maxResults="2">
                <query><![CDATA[select e from test_Customer e]]></query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <simplePagination id="pagination">
            <loaderProvider loaderId="customersLd"/>
        </simplePagination>
        <simplePagination id="paginationCustomIPP"
                    itemsPerPageOptions="12, 9, 23, 41, 1">
            <loaderProvider loaderId="customersLd"/>
        </simplePagination>
        <simplePagination id="paginationNoIPP"
                    itemsPerPageOptions="1,5">
            <containerProvider dataContainer="customersDc2"/>
        </simplePagination>
        <simplePagination id="paginationIPP"
                    itemsPerPageVisible="true"
                    itemsPerPageOptions="1,5">
            <containerProvider dataContainer="customersDc1"/>
        </simplePagination>
        <simplePagination id="paginationWithoutDataSource"
                    itemsPerPageVisible="true"/>
    </layout>
</window>