<fragment xmlns="http://jmix.io/schema/ui/fragment">
    <layout spacing="true" expand="configurationBox">
        <groupBox id="configurationBox" caption="msg://filterConfigurationFormFragment.caption"
                  width="100%"
                  collapsable="true"
                  collapsed="true"
                  expand="configurationForm">
            <form id="configurationForm" width="100%">
                <column width="100%">
                    <textField id="codeField" required="true"
                               caption="msg://filterConfigurationFormFragment.codeField"/>
                    <textField id="captionField" caption="msg://filterConfigurationFormFragment.captionField"/>
                </column>
            </form>
        </groupBox>
    </layout>
</fragment>
