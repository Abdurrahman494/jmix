<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://editorCaption"
        focusComponent="form">
    <data>
        <instance id="parameterDc" class="io.jmix.dashboards.model.parameter.Parameter"/>
    </data>

    <dialogMode height="AUTO"
                width="480"/>

    <layout expand="editActions"
            spacing="true">
        <form id="form"
                    dataContainer="parameterDc"
                    height="70px" childrenCaptionWidth="90px">
            <column width="300px">
                <textField property="name" required="true"/>
                <textField property="alias" required="true"/>
            </column>
        </form>
        <vbox spacing="true">
            <hbox id="valueTypeBox"
                  spacing="true">
                <label align="MIDDLE_LEFT"
                       value="msg://valueType"
                       width="85px"/>
                <comboBox id="typeComboBox"
                             nullOptionVisible="false"
                             optionsEnum="io.jmix.dashboards.model.parameter.ParameterType"
                             required="true"
                             requiredMessage="msg://parameterValueRequired"
                             width="300px"/>
            </hbox>
            <vbox id="valueBox"
                  spacing="true"/>
        </vbox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
