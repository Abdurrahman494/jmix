<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://cssLayoutSettings">
    <dialogMode height="AUTO"
                width="480"/>
    <layout expand="btnPanel"
            spacing="true"
            width="100%">
        <gridLayout id="grid" spacing="true" width="100%">
            <columns>
                <column/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                    <label value="msg://styleName" align="MIDDLE_LEFT"/>
                    <textField id="styleName" width="100%"/>
                </row>
                <row>
                    <label value="msg://responsive" align="MIDDLE_LEFT"/>
                    <checkBox id="responsive"/>
                </row>
            </rows>
        </gridLayout>
        <buttonsPanel id="btnPanel">
            <button id="okBtn"
                    caption="msg:///ok"
                    icon="OK"/>
            <button id="cancelBtn"
                    caption="msg:///cancel"
                    icon="CANCEL"/>
        </buttonsPanel>
    </layout>
</window>