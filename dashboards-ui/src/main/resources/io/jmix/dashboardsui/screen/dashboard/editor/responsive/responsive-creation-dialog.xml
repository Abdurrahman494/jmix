<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://caption">
    <dialogMode height="AUTO" width="480"/>
    <layout spacing="true"
            width="100%"
            expand="btnPanel">
        <label value="msg://dashboard.gridRules"/>
        <hbox id="slidersBox"
              spacing="true"
              width="100%">
            <vbox id="mobileBox" spacing="true" width="100%" height="100%">
                <slider id="xs" min="1" max="12" datatype="int"/>
                <slider id="md" min="1" max="12" datatype="int"/>
            </vbox>
            <vbox id="desktopBox" spacing="true" width="100%" height="100%">
                <slider id="sm" min="1" max="12" datatype="int"/>
                <slider id="lg" min="1" max="12" datatype="int"/>
            </vbox>
        </hbox>
        <buttonsPanel id="btnPanel">
            <button id="okBtn"
                    caption="msg:///ok"
                    icon="OK"/>
            <button id="cancelBtn"
                    caption="msg:///cancel"
                    icon="CANCEL"/>
        </buttonsPanel>
    </layout>
</window>
