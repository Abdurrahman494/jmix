<fragment xmlns="http://jmix.io/schema/ui/fragment">
    <layout spacing="true">
        <hbox id="hBoxMetaClass"
              spacing="true">
            <label id="metaClassLabel"
                   width="85px"
                   value="msg://metaClass"
                   align="MIDDLE_LEFT"/>
            <comboBox id="metaClassComboBox"
                         required="true"
                         width="300px"/>
        </hbox>
        <hbox id="hBoxEntity"
              spacing="true">
            <label id="entityLabel"
                   width="85px"
                   value="msg://entity"
                   align="MIDDLE_LEFT"/>
            <comboBox id="entitiesComboBox"
                         required="true"
                         width="300px"/>
        </hbox>
        <hbox id="hBoxFetchPlan"
              spacing="true">
            <label id="fetchPlanLabel"
                   width="85px"
                   value="msg://fetchPlanName"
                   align="MIDDLE_LEFT"/>
            <comboBox id="fetchPlanComboBox"
                         required="true"
                         width="300px"/>
        </hbox>
    </layout>
</fragment>