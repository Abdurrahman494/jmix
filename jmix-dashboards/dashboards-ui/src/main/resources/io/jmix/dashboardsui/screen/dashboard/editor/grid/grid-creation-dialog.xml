<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://gridSettings"
        focusComponent="cols">

    <dialogMode height="AUTO"
                width="480"/>

    <layout spacing="true" expand="btnPanel" width="100%">
        <hbox id="slidersBox" spacing="true" width="100%">
            <slider id="rows" min="1" max="16" datatype="int"/>
            <slider id="cols" min="1" max="16" datatype="int"/>
        </hbox>

        <buttonsPanel id="btnPanel">
            <button id="okBtn"
                    caption="msg:///ok"
                    icon="OK"/>
            <button id="cancelBtn"
                    caption="msg:///cancel"
                    icon="CANCEL"/>
        </buttonsPanel>
    </layout>
</window>