<window xmlns="http://jmix.io/schema/ui/window">
    <data>
        <instance id="orderDc" class="test_support.entity.sales.Order" fetchPlan="_local">
            <loader/>
        </instance>
    </data>

    <layout spacing="true">
        <slider id="sliderDefault"/>
        <slider id="sliderDouble" datatype="double"/>
        <slider id="sliderInt" datatype="int"/>
        <slider id="sliderDecimal" datatype="decimal"/>
        <slider id="sliderLong" datatype="long"/>
        <slider id="sliderWithContainer" dataContainer="orderDc" property="amount"/>
    </layout>
</window>
