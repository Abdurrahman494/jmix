<fragment xmlns="http://jmix.io/schema/ui/fragment">
    <data>
        <collection id="attrDc"
                    class="io.jmix.ui.app.jmxconsole.model.ManagedBeanAttribute">
            <loader id="attrLoader" provided="true"/>
        </collection>
    </data>
    <layout spacing="true" margin="false;false;true;false">
        <vbox id="operationVbox" spacing="true">
            <label id="nameLabel" stylename="h2"/>
            <label id="descriptionLabel" visible="false"/>
            <gridLayout id="operationParameters" spacing="true" visible="false">
                <columns count="3"/>
                <rows>
                    <row/>
                </rows>
            </gridLayout>
            <button id="invokeBtn" caption="msg://invoke"/>
        </vbox>
    </layout>
</fragment>