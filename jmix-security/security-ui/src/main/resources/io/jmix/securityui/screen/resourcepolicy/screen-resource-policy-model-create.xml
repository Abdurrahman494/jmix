<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://io.jmix.securityui.screen.resourcepolicy/ScreenResourcePolicyModelCreate.caption"
        focusComponent="form">
    <data/>
    <dialogMode forceDialog="true"
                width="600px"
                height="AUTO"/>
    <layout spacing="true">
        <form id="form" width="100%">
            <column width="100%">
                <comboBox id="screenField" caption="msg://io.jmix.securityui.model/ResourcePolicyModel.resource"/>
                <textField id="policyGroupField"
                           caption="msg://io.jmix.securityui.model/ResourcePolicyModel.policyGroup"/>
                <textArea id="menuItemField"
                          editable="false"
                          caption="msg://io.jmix.securityui.screen.resourcepolicy/ScreenResourcePolicyModelCreate.menuItem"
                          rows="2"/>
                <checkBox id="menuAccessField"
                          caption="msg://io.jmix.securityui.screen.resourcepolicy/ScreenResourcePolicyModelCreate.menuAccess"
                          editable="false"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="commit"/>
            <button action="cancel"/>
        </hbox>
    </layout>
</window>
